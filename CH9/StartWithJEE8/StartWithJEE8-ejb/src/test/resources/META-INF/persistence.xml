<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="danielmysql" transaction-type="JTA">
    <class>com.daniel.delivery.main.repository.delivery.DeliveryData</class>
    <class>com.daniel.delivery.main.repository.delivery.ItemData</class>
    <class>com.daniel.delivery.main.repository.foodservice.FoodServiceData</class>
    <class>com.daniel.delivery.main.repository.foodservice.UserData</class>
    <class>com.daniel.delivery.main.repository.foodproduct.FoodProductData</class>
    <properties>
      <property name="javax.persistence.schema-generation.database.action" value="drop-and-create"/>
      <property name="javax.persistence.schema-generation.create-source" value="metadata"/>
      <property name="javax.persistence.sql-load-script-source" value="META-INF/data.sql"/>
    </properties>
  </persistence-unit>
</persistence>
